  return (
    <div style={{ padding: '40px', maxWidth: '800px', margin: 'auto', fontFamily: 'system-ui' }}>
      <header style={{ borderBottom: '2px solid #EEE', marginBottom: '20px' }}>
        <h1 style={{ color: '#0070f3' }}>Project Hamster: {app.name}</h1>
        <p>Product ID: {id} | <strong>Status: Live</strong></p>
      </header>
      
      <main>
        <p style={{ fontSize: '1.2rem' }}>{app.desc}</p>
        <div style={{ background: '#f9f9f9', padding: '20px', borderRadius: '10px', marginTop: '30px' }}>
          <h3>Subscribe to Unlock Full Version</h3>
          <p>Access this tool for only {app.price}</p>
          <button style={{ background: '#0070f3', color: 'white', padding: '12px 24px', border: 'none', borderRadius: '5px', cursor: 'pointer' }}>
            Buy Now via Stripe
          </button>
        </div>
      </main>
    </div>
  );
