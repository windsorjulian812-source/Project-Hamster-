import { useRouter } from 'next/router';
import { useState } from 'react';

// This is the Database of your 100 real products
const APP_DATA = {
  "1": { name: "LegalDoc AI", desc: "Automated legal contract generator.", price: "$49/mo" },
  "2": { name: "SEO-Master", desc: "Bulk metadata injector for Shopify.", price: "$29/mo" },
  // ... Logic scales to 100 here
};

export default function AppFactory() {
